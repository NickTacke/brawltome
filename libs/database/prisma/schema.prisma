generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Player {
  brawlhallaId Int @id
  name String
  region String?

  aliases PlayerAlias[]

  // Ranked stats
  rating Int @default(0)
  peakRating Int? @default(0)
  tier String?
  games Int @default(0)
  wins Int @default(0)

  // Legend stats
  bestLegend Int? @default(0)
  bestLegendGames Int? @default(0)
  bestLegendWins Int? @default(0)

  // "Economy" metadata
  lastUpdated DateTime @default(now())

  // "Janitor" metrics
  viewCount Int @default(0)
  lastViewedAt DateTime @default(now())

  // Relations
  stats PlayerStats?
  ranked PlayerRanked?

  // Fuzzy search for name and aliases
  @@index([name])

  // Sort by rating descending
  @@index([rating(sort: Desc)])
}

model PlayerAlias {
  brawlhallaId Int

  key String
  value String

  player Player @relation(fields: [brawlhallaId], references: [brawlhallaId], onDelete: Cascade)
  @@id([brawlhallaId, key])
}

model PlayerStatsLegend {
  brawlhallaId Int

  // Legend information
  legendId Int
  legendNameKey String
  
  // XP information
  xp Int
  level Int
  xpPercentage Float

  // General statistics
  games Int
  wins Int
  matchTime Int
  KOs Int
  teamKOs Int
  suicides Int
  falls Int
  damageDealt String
  damageTaken String
  
  // Weapon statistics
  damageWeaponOne String
  damageWeaponTwo String
  timeHeldWeaponOne Int
  timeHeldWeaponTwo Int
  KOWeaponOne Int
  KOWeaponTwo Int

  // Specific KO/Damage statistics
  KOUnarmed Int
  KOThrownItem Int
  KOGadgets Int
  damageUnarmed String
  damageThrownItem String
  damageGadgets String

  // Relations
  stats PlayerStats @relation(fields: [brawlhallaId], references: [brawlhallaId], onDelete: Cascade)

  @@id([brawlhallaId, legendId])
}

model PlayerClan {
  brawlhallaId Int @id

  // Clan information
  clanName String
  clanId Int
  clanXp String
  clanLifetimeXp Int
  personalXp Int

  // Relations
  stats PlayerStats @relation(fields: [brawlhallaId], references: [brawlhallaId], onDelete: Cascade)
}

model PlayerStats {
  brawlhallaId Int @id
  lastUpdated DateTime @default(now())

  // Account stats
  xp Int
  level Int
  xpPercentage Float
  games Int // Total games played
  wins Int // Total wins
  matchTimeTotal Int @default(0) // Sum of matchTime across all legends (seconds)
  
  // Gadget damage
  damageBomb String
  damageMine String
  damageSpikeball String
  damageSidekick String

  // Gadget hits / kills
  hitSnowball Int
  koBomb Int
  koMine Int
  koSpikeball Int
  koSidekick Int
  koSnowball Int

  // Legends & Clan
  legends PlayerStatsLegend[]
  weaponStats PlayerWeaponStat[]
  clan PlayerClan?
  
  // Relations
  player Player @relation(fields: [brawlhallaId], references: [brawlhallaId], onDelete: Cascade)
}

model PlayerWeaponStat {
  brawlhallaId Int

  // Weapon key (e.g. "Sword", "Hammer")
  weapon String

  // Aggregates across all legends
  timeHeld Int
  damage String
  KOs Int

  // Relations
  stats PlayerStats @relation(fields: [brawlhallaId], references: [brawlhallaId], onDelete: Cascade)

  @@id([brawlhallaId, weapon])
}

model PlayerRankedLegend {
  brawlhallaId Int
  legendId Int
  legendNameKey String
  
  // Ranked stats
  rating Int
  peakRating Int
  tier String
  wins Int
  games Int

  // Relations
  ranked PlayerRanked @relation(fields: [brawlhallaId], references: [brawlhallaId], onDelete: Cascade)
  
  @@id([brawlhallaId, legendId])
}

model PlayerRankedTeam {
  brawlhallaId Int

  brawlhallaIdOne Int
  brawlhallaIdTwo Int
  teamName String
  
  // Ranked stats
  rating Int
  peakRating Int
  tier String
  wins Int
  games Int
  
  // Rank information
  region String?
  globalRank Int?
  
  // Relations
  ranked PlayerRanked @relation(fields: [brawlhallaId], references: [brawlhallaId], onDelete: Cascade)
  
  @@id([brawlhallaId, brawlhallaIdOne, brawlhallaIdTwo])
}

model Ranked2v2Team {
  region String

  // Canonicalized team ids: store (min, max) to avoid duplicates
  brawlhallaIdOne Int
  brawlhallaIdTwo Int

  // Official ladder rank from /rankings/2v2
  rank Int

  teamName String

  // Ladder stats
  rating Int
  peakRating Int
  tier String
  wins Int
  games Int

  lastUpdated DateTime @default(now())

  @@id([region, brawlhallaIdOne, brawlhallaIdTwo])
  @@index([region, rating(sort: Desc)])
  @@index([region, peakRating(sort: Desc)])
  @@index([region, wins(sort: Desc)])
  @@index([region, games(sort: Desc)])
  @@index([region, rank])
}

model PlayerRanked {
  brawlhallaId Int @id
  lastUpdated DateTime @default(now())

  // Rank numbers
  globalRank Int?
  regionRank Int?
  
  // Legends & Teams
  legends PlayerRankedLegend[]
  teams PlayerRankedTeam[]

  // Relations
  player Player @relation(fields: [brawlhallaId], references: [brawlhallaId], onDelete: Cascade)
}

// Static Legend Data

model Legend {
  legendId Int @id
  legendNameKey String @unique

  // Biography
  bioName String
  bioAka String?
  bioQuote String?
  bioQuoteAboutAttrib String
  bioQuoteFrom String?
  bioQuoteFromAttrib String?
  bioText String?
  botName String?

  // Weapons
  weaponOne String
  weaponTwo String

  // Stats
  strength String
  dexterity String
  defense String
  speed String
}

// Clan Data

model ClanMember {
  clanId Int
  brawlhallaId Int
  name String
  rank String
  joinDate DateTime
  xp Int
  legendNameKey String?

  clan Clan @relation(fields: [clanId], references: [clanId], onDelete: Cascade)
  
  @@id([clanId, brawlhallaId])
}

model Clan {
  clanId Int @id
  clanName String
  clanCreateDate DateTime
  clanXp String
  clanLifetimeXp Int
  members ClanMember[]
  lastUpdated DateTime @default(now())
}