generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Player {
  brawlhallaId Int @id
  name String
  region String?
  aliases String[] @default([])

  // Ranked stats
  rating Int @default(0)
  peakRating Int? @default(0)
  tier String?
  games Int @default(0)
  wins Int @default(0)

  // Legend stats
  bestLegend Int? @default(0)
  bestLegendGames Int? @default(0)
  bestLegendWins Int? @default(0)

  // "Economy" metadata
  lastUpdated DateTime @default(now())

  // "Janitor" metrics
  viewCount Int @default(0)
  lastViewedAt DateTime @default(now())

  // Fuzzy search for name and aliases
  @@index([name])
  @@index([aliases(any)])

  // Sort by rating descending
  @@index([rating(sort: Desc)])
}