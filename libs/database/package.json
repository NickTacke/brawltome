{
  "name": "@brawltome/database",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "dependsOn": [
          "db-generate",
          "^build"
        ],
        "executor": "nx:run-commands",
        "cache": true,
        "outputs": [
          "{projectRoot}/dist"
        ],
        "options": {
          "cwd": "libs/database",
          "command": "tsc --build tsconfig.lib.json"
        }
      },
      "db-generate": {
        "executor": "nx:run-commands",
        "cache": true,
        "outputs": [
          "{projectRoot}/src/generated/prisma"
        ],
        "options": {
          "command": "pnpm prisma generate --schema libs/database/prisma/schema.prisma"
        }
      },
      "db-migrate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm prisma migrate deploy --schema libs/database/prisma/schema.prisma"
        }
      },
      "db-validate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm prisma validate --schema libs/database/prisma/schema.prisma"
        }
      }
    }
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@brawltome/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@nestjs/common": "^11.0.0",
    "prisma": "^7.2.0",
    "tslib": "^2.3.0"
  }
}
