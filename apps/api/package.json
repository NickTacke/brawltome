{
  "name": "@brawltome/api",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ],
          "cwd": "apps/api"
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "seed": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm dlx tsx --tsconfig tsconfig.app.json src/seed.ts",
          "cwd": "apps/api"
        }
      },
      "seed-legends": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm dlx tsx --tsconfig tsconfig.app.json src/seed-legends.ts",
          "cwd": "apps/api"
        }
      },
      "seed-team-aliases": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm dlx tsx --tsconfig tsconfig.app.json src/seed-team-aliases.ts",
          "cwd": "apps/api"
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/api/dist/package.json",
          "{workspaceRoot}/apps/api/dist/pnpm-lock.yaml"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/api/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@brawltome/api:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@brawltome/api:build:development"
          },
          "production": {
            "buildTarget": "@brawltome/api:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "@brawltome/bhapi-client": "workspace:*",
    "@brawltome/database": "workspace:*",
    "@brawltome/shared-utils": "workspace:*",
    "@brawltome/shared-types": "workspace:*",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/schedule": "^6.1.0",
    "@prisma/client": "^7.1.0",
    "bullmq": "^5.65.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.0.0"
  }
}
