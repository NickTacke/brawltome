{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "customConditions": ["@brawltome/source"],
    "paths": {
      "@brawltome/database": ["libs/database/src/index.ts"],
      "@brawltome/bhapi-client": ["libs/bhapi-client/src/index.ts"],
      "@brawltome/shared-utils": ["libs/shared-utils/src/index.ts"],
      "@brawltome/shared-types": ["libs/shared-types/src/index.ts"],
      "@brawltome/ui": ["libs/ui/src/index.ts"]
    }
  }
}
